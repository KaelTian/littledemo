<Window x:Class="MVVMExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMExample"
        mc:Ignorable="d"
        Title="MVVM Example" Height="450" Width="800">
    <Window.DataContext>
        <local:PersonViewModel />
        <!--绑定 ViewModel-->
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="Name:" Margin="10"/>
            <TextBox Text="{Binding Name}" Margin="10"/>

            <TextBlock Text="Age:" Margin="10"/>
            <TextBox Text="{Binding Age}" Margin="10" IsReadOnly="True"/>

            <Button Content="Increment Age" Command="{Binding IncrementAgeCommand}" Margin="10"/>

            <Button Width="100" Height="30"
                    Content="{Binding Name}"
                    Command="{Binding OpenParamCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"/>
        </StackPanel>

    </Grid>
</Window>
